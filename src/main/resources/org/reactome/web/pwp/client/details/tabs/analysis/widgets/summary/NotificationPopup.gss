.popup {
  background: #dca04f;
  border: 1px solid #f9a123;
  border-radius: 5px;
  color: #fff;
  margin: 4px 10px 0 0;
  padding: 4px 6px 4px 6px;
  white-space: pre;
  overflow: hidden;
  opacity: 0.95;
}

.messages {
  max-height: 75px;
  overflow: auto;
  -ms-overflow-style: none;
  padding-right: 25px;
}

.messages::-webkit-scrollbar {
  width: 0 !important;
}
