.speciesPanel {
  background-color: #58c3e5;
  border: 1px solid #fff;
  border-radius: 5px;
  color: white;
  float: left;
  padding: 8px 8px;
  margin: 3px 0 0 20px;
  min-width: 290px;
  height: 20px;
}

.speciesPanel span {
  margin-right: 4px;
}

.speciesPanel select {
  background-color: transparent;
  color: white;
  border: none;
  min-width: 210px;
  font-weight: bold;
  outline: none;
}

.speciesPanel select option {
  color: black;
}

.otherSpecies {
  background-color: rgba(160, 155, 219, 0.79) !important;
  color: white;
}

.otherSpecies select {
  background-color: transparent;
  color: white;
  border: none;
  min-width: 210px;
  font-weight: bold;
}

.otherSpecies select option {
  color: black;
}
